# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (Supabase/PostgreSQL)
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=db.projectreference.supabase.co
DB_PORT=5432

# Redis (for Channel Layer / WebSockets)
REDIS_URL=redis://localhost:6379/1

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Settings
JWT_SIGNING_KEY=your-jwt-signing-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA_DAYS=7
JWT_REFRESH_EXPIRATION_DELTA_DAYS=30

# Squad Payment Gateway
SQUAD_PUBLIC_KEY=your-squad-public-key
SQUAD_PRIVATE_KEY=your-squad-private-key
SQUAD_WEBHOOK_SECRET=your-webhook-secret

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=BeSmart <noreply@besmart.com>

# Frontend URLs (for CORS and redirects)
FRONTEND_URL=http://localhost:3000
VENDOR_DASHBOARD_URL=http://localhost:3001
ADMIN_PANEL_URL=http://localhost:3002

# AWS S3 / Supabase Storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
SUPABASE_S3_URL=https://your-project.supabase.co/storage/v1/s3
AWS_S3_REGION_NAME=eu-central-1

# Specific Buckets
BUCKET_PRODUCTS=products
BUCKET_PRODUCT_VIDEOS=product-videos
BUCKET_CATEGORIES=categories
BUCKET_CATEGORY_IMAGES=category-images
BUCKET_AVATARS=avatars
BUCKET_ADMIN_PROFILES=admin-profiles
BUCKET_PROMOTIONAL_BANNERS=promotional-banners
BUCKET_HERO_SECTION=hero-section
BUCKET_DOCUMENTS=documents
